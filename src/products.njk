---
title: Artifacts
layout: layout.njk
---

<main class="flex-grow pt-24 pb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-12">
    <!-- Breadcrumb -->
    <div class="flex items-center text-sm text-slate-500 mb-8">
      <a href="/" class="hover:text-indigo-400 transition-colors">Home</a>
      <i data-lucide="chevron-right" class="w-4 h-4 mx-2"></i>
      <span class="text-slate-300">Artifacts</span>
    </div>

    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-5xl md:text-6xl font-bold text-white mb-4">All Artifacts</h1>
      <p class="text-xl text-slate-400">Explore all projects and systems built at ZetoLabs. Find what you're looking for with smart filtering.</p>
    </div>

    <!-- Filter Controls -->
    <div class="mb-8 p-6 glass-panel rounded-xl">
      <div class="flex flex-col md:flex-row gap-4 items-start md:items-center">
        <div class="flex-1">
          <label class="block text-sm font-medium text-slate-300 mb-2">Filter by Category</label>
          <div class="flex flex-wrap gap-2">
            <button onclick="filterArtifacts('all')" class="px-4 py-2 rounded-lg bg-indigo-600 text-white text-sm font-medium transition-all filter-btn active">
              All Projects
            </button>
            <button onclick="filterArtifacts('Productivity')" class="px-4 py-2 rounded-lg bg-slate-800 text-slate-300 text-sm font-medium hover:bg-slate-700 transition-all filter-btn">
              Productivity
            </button>
            <button onclick="filterArtifacts('AI/ML')" class="px-4 py-2 rounded-lg bg-slate-800 text-slate-300 text-sm font-medium hover:bg-slate-700 transition-all filter-btn">
              AI/ML
            </button>
            <button onclick="filterArtifacts('Security')" class="px-4 py-2 rounded-lg bg-slate-800 text-slate-300 text-sm font-medium hover:bg-slate-700 transition-all filter-btn">
              Security
            </button>
            <button onclick="filterArtifacts('Infrastructure')" class="px-4 py-2 rounded-lg bg-slate-800 text-slate-300 text-sm font-medium hover:bg-slate-700 transition-all filter-btn">
              Infrastructure
            </button>
            <button onclick="filterArtifacts('Prototype')" class="px-4 py-2 rounded-lg bg-slate-800 text-slate-300 text-sm font-medium hover:bg-slate-700 transition-all filter-btn">
              Prototype
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Artifacts Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="artifacts-container">
      {% for artifact in artifacts %}
      <div class="artifact-card group rounded-xl overflow-hidden border border-slate-800 hover:border-slate-700 transition-all hover:shadow-xl" data-category="{% for badge in artifact.badges %}{{ badge }}{% if not loop.last %} {% endif %}{% endfor %}">
        <a href="/products/{{ artifact.slug }}/" class="block h-full">
          <div class="relative overflow-hidden bg-slate-900 h-48 flex items-center justify-center">
            <div class="absolute inset-0 bg-grid opacity-10"></div>
            {% if artifact.image %}
            <img src="{{ artifact.image }}" alt="{{ artifact.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
            {% else %}
            <i data-lucide="package" class="w-12 h-12 text-slate-700"></i>
            {% endif %}
            <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-transparent to-transparent"></div>
          </div>
          
          <div class="p-6 bg-slate-950/50 backdrop-blur-sm">
            <div class="mb-3 flex flex-wrap gap-2">
              {% for badge in artifact.badges %}
              <span class="px-2 py-1 rounded text-xs font-medium bg-slate-800 text-slate-300 border border-slate-700">{{ badge }}</span>
              {% endfor %}
            </div>
            
            <h3 class="text-lg font-bold text-white mb-2 group-hover:text-indigo-400 transition-colors">{{ artifact.title }}</h3>
            <p class="text-sm text-slate-400 line-clamp-2">{{ artifact.description }}</p>
            
            <div class="mt-4 pt-4 border-t border-slate-800 flex items-center justify-between">
              <span class="text-xs text-slate-500">v{{ artifact.metadata.version }}</span>
              <i data-lucide="arrow-right" class="w-4 h-4 text-indigo-400 group-hover:translate-x-1 transition-transform"></i>
            </div>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>

    <!-- No Results -->
    <div id="no-results" class="hidden text-center py-12">
      <i data-lucide="inbox" class="w-16 h-16 text-slate-700 mx-auto mb-4"></i>
      <p class="text-slate-400 text-lg">No artifacts match this filter. Try another category.</p>
    </div>
  </div>
</main>

<script>
  function filterArtifacts(category) {
    const cards = document.querySelectorAll('.artifact-card');
    const noResults = document.getElementById('no-results');
    let visibleCount = 0;

    // Update active button
    document.querySelectorAll('.filter-btn').forEach(btn => {
      btn.classList.remove('bg-indigo-600', 'text-white');
      btn.classList.add('bg-slate-800', 'text-slate-300');
    });
    event.target.classList.add('bg-indigo-600', 'text-white');
    event.target.classList.remove('bg-slate-800', 'text-slate-300');

    // Filter cards
    cards.forEach(card => {
      const cardCategories = card.dataset.category;
      if (category === 'all' || cardCategories.includes(category)) {
        card.style.display = 'block';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });

    // Show/hide no results message
    noResults.classList.toggle('hidden', visibleCount > 0);
  }

  // Initialize lucide icons
  lucide.createIcons();
</script>
