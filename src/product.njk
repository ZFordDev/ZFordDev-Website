---
pagination:
  data: artifacts
  size: 1
  alias: artifact
permalink: "/products/{{ artifact.slug }}/"
layout: layout.njk
title: "{{ artifact.title }}"
---

{% block content %}
<main class="flex-grow pt-24 pb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-12">
    <div class="flex items-center text-sm text-slate-500 mb-6">
      <a href="/" class="hover:text-indigo-400 transition-colors">Home</a>
      <i data-lucide="chevron-right" class="w-4 h-4 mx-2"></i>
      <a href="/products/" class="hover:text-indigo-400 transition-colors">Products</a>
      <i data-lucide="chevron-right" class="w-4 h-4 mx-2"></i>
      <span class="text-slate-300">{{ artifact.title }}</span>
    </div>

    <div class="flex flex-col md:flex-row justify-between items-start gap-6">
      <div>
        <div class="flex items-center gap-3 mb-4">
          {% for b in artifact.badges %}
          <span class="px-3 py-1 rounded-full text-xs font-semibold bg-slate-800 text-slate-300 border border-slate-700">{{ b }}</span>
          {% endfor %}
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{{ artifact.title }}</h1>
        <p class="text-xl text-slate-400 max-w-3xl">{{ artifact.description }}</p>
      </div>
      <div class="flex gap-4 mt-4 md:mt-0">
        {% if artifact.repo %}
        <a href="{{ artifact.repo }}" target="_blank" class="px-6 py-3 rounded-lg glass-panel text-slate-200 font-semibold hover:bg-slate-800 transition-all flex items-center gap-2">
          <i data-lucide="github" class="w-4 h-4"></i> View Source
        </a>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2 space-y-12">
        <div class="aspect-video bg-slate-900 rounded-xl overflow-hidden border border-slate-800 flex items-center justify-center group relative">
          <div class="absolute inset-0 bg-grid opacity-20"></div>
          {% if artifact.image %}
          <img src="{{ artifact.image }}" alt="{{ artifact.title }} screenshot" class="w-full h-full object-cover opacity-90">
          {% else %}
          <i data-lucide="image" class="w-16 h-16 text-slate-700"></i>
          {% endif %}
          <div class="absolute inset-0 bg-black/20"></div>
        </div>

        <div>
          <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
            <i data-lucide="zap" class="w-5 h-5 text-indigo-400"></i> Key Features
          </h2>
          <div class="grid sm:grid-cols-2 gap-6">
            {% for feature in artifact.features %}
            <div class="p-6 rounded-xl bg-slate-900/50 border border-slate-800">
              <h3 class="font-bold text-white mb-2">{{ feature.title }}</h3>
              <p class="text-slate-400 text-sm">{{ feature.description }}</p>
            </div>
            {% endfor %}
          </div>
        </div>

        <div class="prose prose-invert prose-slate max-w-none">
          <h3 class="text-xl font-bold text-white mb-4">Engineering Notes</h3>
          <p class="text-slate-400 leading-relaxed">{{ artifact.engineeringNotes }}</p>
        </div>
      </div>

      <div class="space-y-8">
        <div class="glass-panel p-6 rounded-xl">
          <h3 class="font-bold text-white mb-4 flex items-center gap-2">
            <i data-lucide="cpu" class="w-4 h-4 text-purple-400"></i> Tech Stack
          </h3>
          <div class="flex flex-wrap gap-2">
            {% for tech in artifact.techStack %}
            <span class="px-3 py-1 bg-slate-800 rounded-full text-xs text-slate-300 border border-slate-700">{{ tech }}</span>
            {% endfor %}
          </div>
        </div>

        <div class="glass-panel p-6 rounded-xl space-y-4">
          <div class="flex justify-between items-center border-b border-slate-700 pb-3">
            <span class="text-slate-400 text-sm">License</span>
            <span class="text-white text-sm font-medium">{{ artifact.metadata.license }}</span>
          </div>
          <div class="flex justify-between items-center border-b border-slate-700 pb-3">
            <span class="text-slate-400 text-sm">Version</span>
            <span class="text-white text-sm font-medium">{{ artifact.metadata.version }}</span>
          </div>
          <div class="flex justify-between items-center border-b border-slate-700 pb-3">
            <span class="text-slate-400 text-sm">Last Updated</span>
            <span class="text-white text-sm font-medium">{{ artifact.metadata.lastUpdated }}</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-slate-400 text-sm">Platform</span>
            <span class="text-white text-sm font-medium">{{ artifact.metadata.platform }}</span>
          </div>
        </div>

        <div class="glass-panel p-6 rounded-xl">
          <h3 class="font-bold text-white mb-4 flex items-center gap-2">
            <i data-lucide="map" class="w-4 h-4 text-cyan-400"></i> Roadmap
          </h3>
          <div class="space-y-3">
            {% for item in artifact.roadmap %}
            <div class="flex items-start gap-3 pb-3 border-b border-slate-700 last:border-0">
              <div class="mt-1">
                {% if item.status == "completed" %}
                <i data-lucide="check-circle-2" class="w-4 h-4 text-emerald-400"></i>
                {% elif item.status == "in-progress" %}
                <i data-lucide="circle" class="w-4 h-4 text-yellow-400"></i>
                {% else %}
                <i data-lucide="circle" class="w-4 h-4 text-slate-600"></i>
                {% endif %}
              </div>
              <div class="flex-1">
                <p class="text-slate-300 text-sm">{{ item.item }}</p>
                <span class="text-xs text-slate-500 capitalize">{{ item.status }}</span>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
{% endblock %}
